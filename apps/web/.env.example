# Backend API Configuration
# URL for the NestJS backend API
NEXT_PUBLIC_API_URL=http://localhost:3000

# NextAuth Configuration
# URL where the Next.js app is hosted
NEXTAUTH_URL=http://localhost:3001

# Secret key for NextAuth JWT signing (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-secret-key-change-in-production

# Solana Explorer Configuration
# Base URL for Solana Explorer (for viewing addresses and programs)
NEXT_PUBLIC_SOLANA_EXPLORER_URL=https://explorer.solana.com

# Base URL for transaction explorer (Solscan or alternative)
NEXT_PUBLIC_TX_EXPLORER_URL=https://solscan.io
